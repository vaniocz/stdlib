{
    "name": "vanio/stdlib",
    "description": "General purpose classes extending the PHP language.",
    "keywords": ["standard library", "enum", "strings"],
    "type": "library",
    "homepage": "https://github.com/vaniocz/vanio-di-extra-bundle",
    "license": "MIT",
    "authors": [
        {"name": "Adam Hojka"},
        {"name": "Marek Štípek", "email": "marek.stipek@vanio.cz"}
    ],
    "require": {
        "php": ">=7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.2",
        "consistence/coding-standard": "^0.10.1",
        "slevomat/coding-standard": "^1.0.5"
    },
    "autoload": {
        "psr-4": {"Vanio\\Stdlib\\": "src/"}
    },
    "autoload-dev": {
        "psr-4": { "Vanio\\Stdlib\\Tests\\": "tests/" }
    },
    "scripts": {
        "test": "\"vendor/bin/phpunit\" & exit /b 0",
        "lint": "\"vendor/bin/phpcs\" --standard=ruleset.xml --extensions=php --encoding=utf-8 -sp src tests & exit /b 0",
        "fix": "\"vendor/bin/phpcbf\" --standard=ruleset.xml --extensions=php --encoding=utf-8 --no-patch -sp src tests & exit /b 0"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.1.x-dev"
        }
    }
}
